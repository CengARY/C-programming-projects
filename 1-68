#include <stdio.h>
int main(void){
    int i = 0;
    int l = 0;
    int max = 0;
    int num = 0;
    char word[101];
    
    scanf("%d", &num);
    for(i = 0; i < num; i++){
        scanf("%s", word);
        l = 0;
        while(word[l] != '\0'){
            l++;
        }
        if(l > max)
            max = l;
        
    }
    printf("%d\n", max);
    return 0;
}
