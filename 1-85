#include <stdio.h>

int main(){
    //! showMemory(start = 65520)
    int i = 42;
    int *iAdr;
    iAdr= &i; // int *iAdr = &i;
    
    double a = 3.14;
    double * aAdr = &a;
    
    char c = 'p';
    char * cAdr = &c;
    
    
    printf("Address of i is %p and i = %d.\n", iAdr, *iAdr);
    printf("Address of a is %p and a = %lf.\n", aAdr, *aAdr);
    printf("Address of c is %p and c = %d.\n", cAdr, *cAdr);
    
    return(0);
}
