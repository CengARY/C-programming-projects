#include <stdio.h>
int main(void)
{
    int passenger;
    double gas;
    double cost;
    cost = 23.90;
    double total;
    scanf("%d ", &passenger);
    scanf("%lf ", &gas);
    
    if(passenger == 0){
        printf("%.2lf\n", cost);
    }else{
        total = (1+gas)/(passenger+1);
        printf("%.2lf\n", total);
    }
    return 0;
}
